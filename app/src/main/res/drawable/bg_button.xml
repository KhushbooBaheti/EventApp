<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#a1887f" />
            <stroke
                android:width="1dp"
                android:color="#5d4037" />
            <corners
                android:radius="1000dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#795548"
                android:endColor="#3e2723"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#795548" />
            <corners
                android:radius="1000dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>